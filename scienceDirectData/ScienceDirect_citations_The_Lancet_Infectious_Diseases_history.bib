@article{PARIKH2017754,
title = "Meningococcal serogroup B strain coverage of the multicomponent 4CMenB vaccine with corresponding regional distribution and clinical characteristics in England, Wales, and Northern Ireland, 2007–08 and 2014–15: a qualitative and quantitative assessment",
