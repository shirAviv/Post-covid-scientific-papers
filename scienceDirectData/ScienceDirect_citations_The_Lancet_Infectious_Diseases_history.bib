@article{MOSER2018729,
title = "Efficacy and tolerability of triple drug therapy with albendazole, pyrantel pamoate, and oxantel pamoate compared with albendazole plus oxantel pamoate, pyrantel pamoate plus oxantel pamoate, and mebendazole plus pyrantel pamoate and oxantel pamoate against hookworm infections in school-aged children in Laos: a randomised, single-blind trial",
