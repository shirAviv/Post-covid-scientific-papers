@article{WANG2020101871,
title = "Cross-cultural adaptation and psychometric properties of the Chinese version of the Functional Remission of General Schizophrenia (FROGS) scale and the four-item version (mini-FROGS) among people with schizophrenia",
journal = "Asian Journal of Psychiatry",
volume = "47",
pages = "101871",
