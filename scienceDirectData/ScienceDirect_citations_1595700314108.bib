@article{HERRERALOPEZ2018631,
title = "The rs1256031 of estrogen receptor β gene is associated with type 2 diabetes",
journal = "Diabetes & Metabolic Syndrome: Clinical Research & Reviews",
volume = "12",
number = "5",
pages = "631 - 633",
year = "2018",
issn = "1871-4021",
doi = "https://doi.org/10.1016/j.dsx.2018.04.018",
url = "http://www.sciencedirect.com/science/article/pii/S1871402118300985",
author = "Ema E. Herrera-Lopez and Osvaldo D. Castelan-Martinez and Fernando Suarez-Sanchez and Jaime H. Gomez-Zamudio and Jose J. Peralta-Romero and Miguel Cruz and Adan Valladares-Salgado",
keywords = "Estrogen receptor β, Type 2 diabetes, rs1256031, Polymorphism",
abstract = "Aim
To determine the association between the rs1256031 polymorphism and risk of developing type 2 diabetes.
Materials and Methods
Cases and controls study. 597 individuals with type 2 diabetes and 605 without it participated. Genotyping of the rs1256031 polymorphism of the ERβ gene was performed by real-time PCR using TaqMan assay. For the multivariate analysis, a multiple logistic regression was performed that included the main confounding variables.
Results and conclusion
A multiple logistic regression analysis was performed, adjusting for age, WHR, BMI and gender. The dominant model showed a protective effect compared to the TT genotype (OR = 0.596, IC95% [0.458–0.776]). Discussion. The proportions of native American, European and African ancestry were characterized and no difference was found in the study groups. The protective effect obtained in the dominant model could to be due a regulatory function in the transcription or the processing of the primary transcript. Our result are the first to report an association between the polymorphism rs1256031 and the reduction of the risk of T2D in the Mexican population. The rs1256031 polymorphism show reduced risk of developing T2D and is potential markers for predicting T2D."
}
@article{AQUINO2019137,
title = "Pharmacotherapeutic empowerment and its effectiveness in glycemic control in patients with Diabetes Mellitus",
journal = "Diabetes & Metabolic Syndrome: Clinical Research & Reviews",
volume = "13",
number = "1",
pages = "137 - 142",
year = "2019",
issn = "1871-4021",
doi = "https://doi.org/10.1016/j.dsx.2018.08.002",
url = "http://www.sciencedirect.com/science/article/pii/S1871402118302923",
author = "Jéssica Azevedo Aquino and André Oliveira Baldoni and Cláudia {Di Lorenzo Oliveira} and Clareci Silva Cardoso and Roberta Carvalho {de Figueiredo} and Cristina Sanches",
keywords = "Self-care, Diabetes Mellitus, Pharmaceutical care, Pharmacotherapeutic empowerment",
abstract = "Aims
To develop an intervention and evaluate its effectiveness in pharmacotherapeutic empowerment of patients with type 2 diabetes mellitus (T2DM).
Method
This is an intervention study with before and after evaluation. The intervention was conducted between 2015 and 2016 with users of the Unified Health System (SUS) in Brazil. The study was divided into six stages: initial evaluation, three individual patient-pharmacist meetings every 15 days over 6 weeks, clinical discussion between pharmacists, and final evaluation. At each meeting with the patient, specific themes for empowerment were addressed using educational booklets and pharmaceutical care. Clinical and laboratory evaluations and questionnaires on self-efficacy (IMDSES), self-care (QAD) and distress (PAID-5) were conducted before and three months after the intervention.
Results
47 patients completed the intervention. Glycated hemoglobin of patients had a median reduced from 7.0% to 6.6% after the intervention (p = 0.02). There was a significant difference (p < 0.01) in the reduction in total cholesterol, fasting glycemia, creatinine and blood pressure. Participants showed significant improvements (p < 0.01) in scores related to self-efficacy and self-care and less distress related to T2DM.
Conclusion
The results of the study suggest that the strategy developed is effective in promoting the empowerment of T2DM patients, improved glycemic control and self-care."
}
