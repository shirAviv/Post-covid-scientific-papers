@article{ADEVAANDANY20191449,
title = "Insulin resistance is a cardiovascular risk factor in humans",
journal = "Diabetes & Metabolic Syndrome: Clinical Research & Reviews",
volume = "13",
number = "2",
pages = "1449 - 1455",
year = "2019",
issn = "1871-4021",
