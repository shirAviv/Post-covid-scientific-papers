@article{GUL2020,
title = "Association of overweight/obesity with the severity of periodontitis using BPE code in an iraqi population",
journal = "Clinical Epidemiology and Global Health",
year = "2020",
issn = "2213-3984",
doi = "https://doi.org/10.1016/j.cegh.2020.06.005",
url = "http://www.sciencedirect.com/science/article/pii/S2213398420301627",
