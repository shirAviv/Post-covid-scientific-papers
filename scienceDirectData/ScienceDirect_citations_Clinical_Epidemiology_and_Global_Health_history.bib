doi = "https://doi.org/10.1016/j.cegh.2020.04.007",
url = "http://www.sciencedirect.com/science/article/pii/S2213398420301032",
author = "Priya Vidhale and Sneha Puri and M.L. Bhongade",
keywords = "Preterm, Low birth weight, Periodontal disease, Maternal",
abstract = "Background
