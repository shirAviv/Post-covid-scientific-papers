@article{CUSCHIERI2020,
title = "Public health preventive action to start from the fourth decade of life?",
journal = "Clinical Epidemiology and Global Health",
year = "2020",
issn = "2213-3984",
doi = "https://doi.org/10.1016/j.cegh.2020.04.022",
url = "http://www.sciencedirect.com/science/article/pii/S2213398420301184",
