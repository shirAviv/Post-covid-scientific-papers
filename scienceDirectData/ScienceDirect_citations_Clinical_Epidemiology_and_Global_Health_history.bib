@article{DSOUZA2020,
title = "Testing a diabetes keotacidosis simulation in critical care nursing: A randomized control trial",
journal = "Clinical Epidemiology and Global Health",
year = "2020",
issn = "2213-3984",
doi = "https://doi.org/10.1016/j.cegh.2020.03.011",
url = "http://www.sciencedirect.com/science/article/pii/S2213398420300786",
author = "Melba Sheila D'Souza and Leodoro Jabien Labrague and Subrahmanya Nairy Karkada and Kader Parahoo and Ramesh Venkatesaperumal",
keywords = "High-fidelity simulation, Diabetes ketoacidosis, Satisfaction, Self-confidence, Critical thinking, Nursing",
abstract = "Background
