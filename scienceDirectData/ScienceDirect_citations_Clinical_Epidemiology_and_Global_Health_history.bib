}
@article{JINDAL2020,
title = "Are our teachers knowledgeable towards pre hospital emergency care: A study from South India",
journal = "Clinical Epidemiology and Global Health",
year = "2020",
issn = "2213-3984",
doi = "https://doi.org/10.1016/j.cegh.2020.04.016",
url = "http://www.sciencedirect.com/science/article/pii/S2213398420301123",
