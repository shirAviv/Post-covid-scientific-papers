@article{RASHID202091,
title = "Malnutrition among elderly a multifactorial condition to flourish: Evidence from a cross-sectional study",
journal = "Clinical Epidemiology and Global Health",
volume = "8",
number = "1",
pages = "91 - 95",
year = "2020",
issn = "2213-3984",
