@article{KANNACHAMKANDY2020,
title = "Association between serum micronutrient levels and febrile seizures among febrile children in Southern India: A case control study",
journal = "Clinical Epidemiology and Global Health",
year = "2020",
issn = "2213-3984",
doi = "https://doi.org/10.1016/j.cegh.2020.05.014",
url = "http://www.sciencedirect.com/science/article/pii/S2213398420301536",
