@article{SINGH2020,
title = "Open dumping site and health risks to proximate communities in Mumbai, India: A cross-sectional case-comparison study",
journal = "Clinical Epidemiology and Global Health",
year = "2020",
issn = "2213-3984",
doi = "https://doi.org/10.1016/j.cegh.2020.06.008",
