@article{KURUP2019648,
title = "Use of systematic epidemiological methods in outbreak investigations from India, 2008–2016: A systematic review",
journal = "Clinical Epidemiology and Global Health",
volume = "7",
number = "4",
pages = "648 - 653",
year = "2019",
issn = "2213-3984",
