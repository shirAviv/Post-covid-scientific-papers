@article{AMOGHASHREE2020,
title = "Estimation of cardiovascular diseases (CVD) risk using WHO/ISH risk prediction charts in tribal population of Chamarajanagar district, Karnataka",
journal = "Clinical Epidemiology and Global Health",
year = "2020",
issn = "2213-3984",
