@article{VINAY2020,
title = "Association of diet and lipid profile among coronary heart disease patients",
journal = "Clinical Epidemiology and Global Health",
year = "2020",
issn = "2213-3984",
doi = "https://doi.org/10.1016/j.cegh.2020.05.004",
url = "http://www.sciencedirect.com/science/article/pii/S2213398420301305",
author = "B.C. Vinay and C.S. Shastry and Subramanyam Kodangala and Uday Venkat Mateti and Krishna Bhat",
keywords = "Coronary heart disease, High-density lipoproteins, Low-density lipoprotein, Vegetarians, Omnivorous",
abstract = "Background
