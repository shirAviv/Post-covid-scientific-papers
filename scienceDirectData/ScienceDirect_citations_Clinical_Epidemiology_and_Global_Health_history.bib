@article{SRUTHIPRIYA2020698,
title = "Does the salivary fern pattern determine fertile period in reproductive female?",
journal = "Clinical Epidemiology and Global Health",
volume = "8",
number = "3",
pages = "698 - 701",
year = "2020",
issn = "2213-3984",
doi = "https://doi.org/10.1016/j.cegh.2020.01.005",
url = "http://www.sciencedirect.com/science/article/pii/S2213398420300130",
