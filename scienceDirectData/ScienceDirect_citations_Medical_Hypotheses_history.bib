@article{BADAWY2019109314,
title = "Hypothesis: Metabolic targeting of 5-aminolevulinate synthase by tryptophan and inhibitors of heme utilisation by tryptophan 2,3-dioxygenase as potential therapies of acute hepatic porphyrias",
journal = "Medical Hypotheses",
volume = "131",
