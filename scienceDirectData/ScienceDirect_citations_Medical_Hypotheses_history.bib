@article{VIRGILIO201830,
title = "Preoperative gastric lavage in gastric cancer patients undergoing surgical, endoscopic or minimally invasive treatment: An oncological measure preventing peritoneal spillage of intragastric cancer cells and development of related metastases",
journal = "Medical Hypotheses",
volume = "114",
pages = "30 - 34",
year = "2018",
