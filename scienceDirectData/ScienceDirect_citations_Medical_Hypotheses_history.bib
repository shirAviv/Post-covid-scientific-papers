@article{LI201969,
title = "Vitiligo and Hashimoto’s thyroiditis: Autoimmune diseases linked by clinical presentation, biochemical commonality, and autoimmune/oxidative stress-mediated toxicity pathogenesis",
journal = "Medical Hypotheses",
volume = "128",
pages = "69 - 75",
year = "2019",
issn = "0306-9877",
doi = "https://doi.org/10.1016/j.mehy.2019.05.010",
url = "http://www.sciencedirect.com/science/article/pii/S0306987719302300",
author = "Dongmei Li and Guanzhao Liang and Richard Calderone and Joseph A. Bellanti",
keywords = "Vitiligo (VL), Hashimoto’s thyroiditis (HT), Oxidative stress-mediated toxicity, Quinone, Semiquinone, Hydroquinone, Reactive oxygen species (ROS)",
abstract = "Vitiligo (VL) is a chronic autoimmune pigmentation disorder characterized by destruction of melanocytes. The condition is associated with several other autoimmune diseases, but autoimmune thyroid diseases, especially Hashimoto's thyroiditis (HT), is the most prevalent organ-specific autoimmune disease with a co-morbidity up to 34%. Among the many hypotheses that have been proposed for the pathogenesis of both diseases, autoimmunity and oxidative stress-mediated toxicity in melanocytes or thyrocytes, respectively, have been the most widely accepted – with autoimmunity being the presumed consequence of oxidative stress-mediated toxicity. However, the predominant etiologic basis for impairment of redox balance has rarely been studied. The two autoimmune diseases are not only linked by a concordance of clinical presentations and an autoimmune/oxidative stress-mediated toxicity pathogenesis but also by an apparent biochemical commonality. The target molecules produced in the thyroid and skin, i.e., thyroxine and melanin, respectively, are derived from the same primordial parent molecule, tyrosine. On the basis of these similarities between Hashimoto’s thyroiditis and vitiligo, specifically with respect to the activation of oxidative stress, we propose a novel hypothesis accounting for the destruction of melanocytes or thyrocytes in VL and AT. We suggest a new therapeutic regimen of quinone derivatives to combat ROS-induced autoimmunity resulting from this common biochemical etiologic error."
}
@article{BERTINI201946,
