@article{LINNEMAN2019154,
title = "The vitamin D positive feedback hypothesis of inflammatory bowel diseases",
journal = "Medical Hypotheses",
volume = "127",
pages = "154 - 158",
year = "2019",
issn = "0306-9877",
doi = "https://doi.org/10.1016/j.mehy.2019.04.005",
url = "http://www.sciencedirect.com/science/article/pii/S0306987718313367",
author = "Z. Linneman and C. Reis and K. Balaji and J. Moore and S. Braude",
abstract = "While it appears that there are a variety of factors that exacerbate IBD, it is frustrating that symptoms can persist and worsen even when environmental insults are removed. We suggest that there may be a positive feedback loop which perpetuates the inflammatory response in IBD patients. The loop is triggered by vitamin D deficiency which reduces calcium uptake. Lowered vitamin D and calcium interfere with anti-inflammatory pathways. Inflammation of the mucosa inhibits absorption of calcium and thus perpetuates the reduced anti-inflammatory response. A number of predictions follow from this hypothesis and are supported by geographic and lifestyle patterns in IBD incidence and prevalence."
}
