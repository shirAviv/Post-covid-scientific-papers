doi = "https://doi.org/10.1016/j.mehy.2017.08.021",
url = "http://www.sciencedirect.com/science/article/pii/S0306987717303778",
author = "Jing Zhang and Yanlin Song and Fan Xia and Chenjing Zhu and Yingying Zhang and Wenpeng Song and Jianguo Xu and Xuelei Ma",
