@article{NAIDOO201937,
title = "Does the use of adjunct urine lipopolysaccharide lipoarabinomannan in HIV-infected hospitalized patients reduce the utilization of healthcare resources? A post hoc analysis of the LAM multi-country randomized controlled trial",
journal = "International Journal of Infectious Diseases",
volume = "79",
