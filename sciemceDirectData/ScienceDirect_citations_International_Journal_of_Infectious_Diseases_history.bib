issn = "1201-9712",
doi = "https://doi.org/10.1016/j.ijid.2020.06.091",
url = "http://www.sciencedirect.com/science/article/pii/S1201971220305269",
author = "Xudan Chen and Baoyi Zhu and Wenxin Hong and Jianwen Zeng and Xi He and Jingfeng Chen and Haipeng Zheng and Shuang Qiu and Ying Deng and Juliana CN Chan and Jian Wang and Yuying Zhang",
keywords = "Corticosteroid, COVID-19, Diarrhea, Lopinavir/ritonavir, Risk factors, Viral RNA shedding",
abstract = "Objective
