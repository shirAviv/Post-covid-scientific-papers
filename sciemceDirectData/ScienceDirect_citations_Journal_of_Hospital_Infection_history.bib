@article{DENTON201632,
title = "Evolution of an audit and monitoring tool into an infection prevention and control process",
journal = "Journal of Hospital Infection",
volume = "94",
number = "1",
pages = "32 - 40",
year = "2016",
issn = "0195-6701",
