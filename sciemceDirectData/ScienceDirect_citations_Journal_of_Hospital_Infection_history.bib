}
@article{MEDAGLIAMATA2020670,
title = "Disinfection of surfaces contaminated with Clostridioides difficile endospores using NaCl-derived electrochemically activated solution",
journal = "Journal of Hospital Infection",
volume = "105",
number = "4",
pages = "670 - 677",
year = "2020",
issn = "0195-6701",
