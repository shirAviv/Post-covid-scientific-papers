}
@article{ELHASSAN20181109,
title = "Autophagy and GLUT4: The missing pieces",
journal = "Diabetes & Metabolic Syndrome: Clinical Research & Reviews",
volume = "12",
number = "6",
pages = "1109 - 1116",
year = "2018",
issn = "1871-4021",
