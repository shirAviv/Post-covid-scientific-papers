@article{MARN2016e251,
title = "Accuracy of the WHO Haemoglobin Colour Scale for the diagnosis of anaemia in primary health care settings in low-income countries: a systematic review and meta-analysis",
journal = "The Lancet Global Health",
volume = "4",
number = "4",
pages = "e251 - e265",
year = "2016",
