@article{NEEDHAM2016203,
title = "Rosuvastatin versus placebo for delirium in intensive care and subsequent cognitive impairment in patients with sepsis-associated acute respiratory distress syndrome: an ancillary study to a randomised controlled trial",
journal = "The Lancet Respiratory Medicine",
volume = "4",
number = "3",
