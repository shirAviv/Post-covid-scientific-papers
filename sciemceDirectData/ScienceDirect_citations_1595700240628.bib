@article{AMJO20192208,
title = "Insulin resistance and plasma glucose tolerance abnormalities in Nigerians with chronic liver disease",
journal = "Diabetes & Metabolic Syndrome: Clinical Research & Reviews",
volume = "13",
number = "3",
pages = "2208 - 2213",
year = "2019",
issn = "1871-4021",
